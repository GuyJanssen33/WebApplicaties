@model FilmDatabase.ViewModels.GebruikerListViewModel

@{ViewData["Title"] = "Index";
}

<h2>Gebruikers</h2>
<p>
	<a asp-action="Create">Create New</a>
</p>
<p>
	<a asp-action="GrantPermissions">Change Roles</a>
</p>

<table>
	<thead>
		<tr>
			<th class="col-md-4">
				@Html.DisplayNameFor(v => v.Gebruikers[0].Id)
			</th>
			<th class="col-md-4">
				@Html.DisplayNameFor(v => v.Gebruikers[0].Voornaam)
			</th>
			<th class="col-md-4">
				@Html.DisplayNameFor(v => v.Gebruikers[0].Familienaam)
			</th>
			<th class="col-md-4">
				@Html.DisplayNameFor(v => v.Gebruikers[0].Geboortedatum)
			</th>
			<th class="col-md-2">
				&nbsp;
			</th>
			
		</tr>
	</thead>
	<tbody>
		@foreach (var gebruiker in Model.Gebruikers)
		{
			<tr>
				<td class="col-md-4">
					@Html.DisplayFor(modelItem => gebruiker.Id)
				</td>
				<td class="col-md-2">
					@Html.DisplayFor(modelItem => gebruiker.Voornaam)
				</td>
				<td class="col-md-2">
					@Html.DisplayFor(modelItem => gebruiker.Familienaam)
				</td>
				<td class="col-md-2">
					@Html.DisplayFor(modelItem=>gebruiker.Geboortedatum)
				</td>
				<td class="col-md-2">
					<a asp-action="Details" asp-route-id="@gebruiker.Id">Details</a> 
					<a asp-action="Delete" asp-route-id="@gebruiker.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>