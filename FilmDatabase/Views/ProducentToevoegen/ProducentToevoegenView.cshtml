@model FilmDatabase.ViewModels.ProducentToevoegenViewModel

@{
	ViewData["Title"] = "Producent Toevoegen";
}

<h1 class="title">@ViewData["Title"]</h1>

<div class="container">
	<form asp-controller="ProducentToevoegen" asp-action="AddProducent" method="post">
		<div class="form-group col-md-2">
			<label asp-for="Voornaam"></label>
			<input asp-for="Voornaam" class="form-control" />
			<span asp-validation-for="Voornaam" class="text-danger"></span>
		</div>
		<div class="form-group col-md-2">
			<label asp-for="Familienaam"></label>
			<input asp-for="Familienaam" class="form-control" />
			<span asp-validation-for="Familienaam" class="text-danger"></span>
		</div>
		<div class="form-group col-md-2">
			<label asp-for="GeboorteDatum"></label>
			<input type="date" asp-for="GeboorteDatum" class="form-control" />
			<span asp-validation-for="GeboorteDatum" class="text-danger"></span>
		</div>
		<div class="form-group col-md-2">
			<label asp-for="GeboortePlaats"></label>
			<input asp-for="GeboortePlaats" class="form-control" />
			<span asp-validation-for="GeboortePlaats" class="text-danger"></span>
		</div>
		<div class="form-group col-md-2">
			<label asp-for="GeboorteLand"></label>
			<input asp-for="GeboorteLand" class="form-control" />
			<span asp-validation-for="GeboorteLand" class="text-danger"></span>
		</div>



		<div class="form-group">
			<input type="submit" value="AddProducent" class="btn btn-primary" />
		</div>

	</form>
</div>