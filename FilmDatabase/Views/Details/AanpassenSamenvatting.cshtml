@model FilmDatabase.ViewModels.FilmAanpassenViewModel

@{
	ViewData["Title"] = @Model.Titel;
}


<div class="container">

	<h1>@ViewData["Title"]</h1>
	<img src="@Model.Poster">

	<h3>Release datum: @Model.ReleaseDatum</h3>

	<h3>Id: @Model.FilmId</h3>

	<h3>Genre: @Model.Genre</h3>

	<h3>Verdeler: @Model.Verdeler</h3>

	<h3>Lengte: @Model.Lengte</h3>
	
	<h3>Rating: @Model.Rating</h3>

	<h3>Schrijver: @Model.Schrijver</h3>
	
	@{
		var samenvatting = "";
	}
	@if(Model.Samenvatting == null)
	{
		samenvatting = "Er is nog geen samenvatting beschikbaar voor deze film";
	}
	else
	{
		samenvatting = @Model.Samenvatting;
	}

		

	<form asp-controller="Details" asp-action="UpdateFilm" method="post">
	<div class="mb-3">
		<label for="exampleFormControlTextarea1" class="form-label">Samenvatting</label>
		<textarea placeholder="@samenvatting" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
	</div>
		<div class="form-group">
			<input type="submit" value="UpdateFilm" class="btn btn-primary" />
		</div>
	</form>

	
	
</div>
